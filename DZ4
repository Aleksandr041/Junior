using System;

namespace ConsoleDZ4
{
    class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("Как вас зовут?");
            string name = Console.ReadLine();

            Console.WriteLine("Сколько вам лет?");
            string age = Console.ReadLine();

            Console.WriteLine("Какой ваш знак зодиака?");
            string signZodiac = Console.ReadLine();

            Console.WriteLine("Где вы работаете?");
            string placeWork = Console.ReadLine();

            Console.WriteLine($"Вас зовут {name}, вам {age} год, вы {signZodiac} и работаете {placeWork}");
        
        }
    }
}
