using System;

namespace ConsoleDZ7
{
    class Program
    {
        static void Main(string[] args)
        {
            int gold;
            int crystal;
            int crystalUnitPrice = 10;

            Console.WriteLine("Добро пожаловать в магазин! Сегодня кристаллы по " + crystalUnitPrice + " золота");
            Console.Write("Сколько у вас золота? ");
            gold = Convert.ToInt32(Console.ReadLine());
            Console.Write("Сколько кристаллов вы хотите купить? ");
            crystal = Convert.ToInt32(Console.ReadLine());

            gold -= crystal * crystalUnitPrice;

            Console.WriteLine($"У вас в сумке {crystal} кристаллов, и {gold} золота");
        }
    }
}
